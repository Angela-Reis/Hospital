@model Hospital.Models.Especialidades

@{
	ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja apagar isto?</h3>
<div>
	<h4>Especialidades</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>
	</dl>
	<hr />
	<b>Médicos da Especialidade @Html.DisplayFor(model => model.Nome)</b><br /><br />
	<dl class="row">
		@*Lista os medicos da especialidade*@
		@foreach (var item in Model.ListaMedicos)
		{
			<dd class="col-sm-2">
				@Html.DisplayFor(model => item.NumCedulaProf)
			</dd>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => item.Nome)
			</dd>
		}
	</dl>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>
