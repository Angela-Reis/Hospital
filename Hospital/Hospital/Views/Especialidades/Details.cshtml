@model Hospital.Models.Especialidades

@{
	ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
	<h4>Especialidades</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>
	</dl>
</div>
<div>
	<hr />
	<b>Médicos da Especialidade @Html.DisplayFor(model => model.Nome)</b><br /><br />
	<dl class="row">
		@*Lista os medicos da especialidade*@
		@foreach (var item in Model.ListaMedicos)
		{
			<dd class="col-sm-2">
				@Html.DisplayFor(model => item.NumCedulaProf)
			</dd>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => item.Nome)
			</dd>
		}
	</dl>

	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
