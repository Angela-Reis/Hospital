@model Hospital.Models.Utentes

@{
	ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
	<h4>Utente</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Foto)
		</dt>
		<dd class="col-sm-10">
			@*@Html.DisplayFor(model => model.Foto)*@
			<img src="~/Fotos/Utentes/@Html.DisplayFor(model => model.Foto)"
				 alt="foto do utente: @Html.DisplayFor(model => model.Nome)"
				 title="@Html.DisplayFor(model => model.Nome)"
				 height="200" />
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NumUtente)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NumUtente)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NIF)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NIF)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NumTelemovel)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NumTelemovel)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DataNascimento)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DataNascimento)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Sexo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Sexo)
		</dd>
	</dl>
</div>
<div>
	@*Mostar Link para Editar se o utilizador for um Administrativo or for o Utente com id*@
	@if (User.IsInRole("Administrativo") || (User.IsInRole("Utente")))
	{
		<text>
			<a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
		</text>
	}
	@if (!User.IsInRole("Utente"))
	{
		<a asp-action="Index">Voltar à Lista</a>
	}
</div>
