@model Hospital.Models.Pagamentos

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Pagamentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuxValor" class="control-label"></label>
                <input asp-for="AuxValor" class="form-control" />
                <span asp-validation-for="AuxValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsultaFK" class="control-label"></label>
                <select asp-for="ConsultaFK" class ="form-control" asp-items="ViewBag.ConsultaFK">
                    <option disabled selected>Escolher Consulta</option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" onchange="selecionado(event)"/> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            @*Apenas mostrar div com os campos DataEfetuado e Metodo quando pagamento é efetuado*@
            <div id="efetuado" style="display:none;">
                <div class="form-group">
                    <label asp-for="DataEfetuado" class="control-label"></label>
                    <input asp-for="DataEfetuado" class="form-control" />
                    <span asp-validation-for="DataEfetuado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Metodo" class="control-label"></label>
                    <input asp-for="Metodo" class="form-control" />
                    <span asp-validation-for="Metodo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

<script type="text/javascript">
    function selecionado(event) {
          if (event.target.checked) {
            efetuado.style.display = 'block';
          } else {
            efetuado.style.display = 'none';
          }
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
